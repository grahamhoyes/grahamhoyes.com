    "cross-env": "^7.0.3",
    "dedent": "^0.7.0",
    "eslint": "^9.27.0",
    "eslint-config-next": "^15.3.2",
    "eslint-config-prettier": "^10.1.5",
    "file-loader": "^6.0.0",
    "globals": "^16.1.0",
    "globby": "11.0.3",
    "husky": "^6.0.0",
    "inquirer": "^8.1.1",
