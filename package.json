{
  "name": "grahamhoyes.com",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "analyze": "cross-env ANALYZE=true next build",
    "build": "next build",
    "check:eslint": "eslint . --max-warnings=0",
    "check:prettier": "prettier --check .",
    "dev": "next dev",
    "lint": "next lint --fix --dir app --dir components --dir lib --dir layouts --dir scripts && npm run check:prettier",
